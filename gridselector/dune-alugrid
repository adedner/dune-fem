{
  "ALUGrid" :
  {
    "type"      : "Dune::ALUGrid< $(dimgrid), $(dimworld), $(type), $(refinement) >",
    "default"   : [ "dimworld=$(dimgrid)", "refinement=nonconforming" ],
    "translate" : { "type" : [ "simplex=Dune::simplex", "cube=Dune::cube" ],
                    "refinement" : [ "conforming=Dune::conforming", "nonconforming=Dune::nonconforming" ] },
    "include"   : [ "dune/alugrid/grid.hh", "dune/alugrid/dgf.hh" ]
  },
  "ALUCubeGrid" :
  {
    "type"      : "Dune::ALUGrid< $(dimgrid), $(dimworld), Dune::cube >",
    "default"   : [ "dimworld=$(dimgrid)" ],
    "include"   : [ "dune/alugrid/grid.hh", "dune/alugrid/dgf.hh" ]
  },
  "ALUSimplexGrid" :
  {
    "type"      : "Dune::ALUGrid< $(dimgrid), $(dimworld), Dune::simplex, $(refinement) >",
    "default"   : [ "dimworld=$(dimgrid)", "refinement=nonconforming" ],
    "translate" : { "refinement" : [ "conforming=Dune::conforming", "nonconforming=Dune::nonconforming" ] },
    "include"   : [ "dune/alugrid/grid.hh", "dune/alugrid/dgf.hh" ]
  }
}
